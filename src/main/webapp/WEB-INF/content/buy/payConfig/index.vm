<script type="text/javascript">
    var mTable;
    $(document).ready(function() {

        $("input[name='startTime']").datepicker({
            format: 'yyyy-mm-dd',
            weekStart: 1,
            autoclose: true,
            todayBtn: 'linked',
            language: 'cn'
        });
        $("input[name='endTime']").datepicker({
            format: 'yyyy-mm-dd',
            weekStart: 1,
            autoclose: true,
            todayBtn: 'linked',
            language: 'cn'
        });

        mTable = $('#sample-table').DataTable({
            "processing": true,
            "serverSide": true,
            "bPaginate" : false,
            "ajax": {
                url: "${base}/buy/payConfig/getAll.htm",
                type: "post",
                data: function (d) {
                },
                "dataSrc": function (json) {
                    if (!json.success) {
                        json.data = [];
                        var code = json.code;
                        if (code == 400) {
                            Box.alert(json.message, function () {
                                window.location.href = "${base}/sys/login/logout";
                            }, "确定");
                        } else {
                            layer.msg(json.message);
                        }
                    }
                    return json.data;
                }
            },
            "columns": [
                {"data": null, "orderable": false},
                {"data": "partnerName", "orderable": false},
                {"data": "payType", "visible": false},
                {"data": "charset", "orderable": false},
                {"data": "open", "orderable": false},
                {"data": null},
            ],
            "columnDefs": [
                {
                    "class": "center",
                    "targets": 0
                },
                {
                    "orderable": false,
                    "render": function (data, type, row) {
                        return data + "(" + row.payType + ")";
                    },
                    "targets": 3
                },
                {
                    "orderable": false,
                    "render": function (data, type, row) {
                        if (data == 1) {
                            return "已开启";
                        } else if (data == 0) {
                            return "未开启";
                        }
                    },
                    "targets": 4
                },

                {
                    "orderable": false,
                    "render": function (data, type, row) {
                        var optionStr = "";
                        var optionStatus = 0;
                        if (row.open == 1) {
                            optionStr = "关闭";
                            optionStatus = 0;
                        } else if (row.open == 0) {
                            optionStr = "开启";
                            optionStatus = 1;
                        }
                        var ope = [];
                        ope.push("<div class=\"nowrap\"><div class=\"btn-group\">");
                        ope.push("<a onclick='updateOpenStaus(" + row.id + "," + optionStatus + ")'>" + optionStr + "</a>");
                        ope.push("</div></div>");
                        return ope.join("");
                    },
                    "targets": 5
                }
            ],
            "bFilter": false,
            initComplete: function (settings, data) {

            },
            "fnDrawCallback": function () {
                this.api().column(0).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            },
            "oLanguage": {
                "sUrl": "${base}/mocentre/js/dataTables/de_DE.txt"
            }
        });

        $('#search_form').submit(function () {
            mTable.draw();
            return false;
        });

    });
    function updateOpenStaus(id, status) {
        jQuery.ajax({
            type: 'post',
            url: '${base}/buy/payConfig/editOpenStatus.htm',
            data: {"id": id, "status": status},
            dataType: 'json',
            success: function (data) {
                if (data.success) {
                    mTable.draw();
                } else {
                    Box.alert(data.message);
                }
            }
        })
    }
</script>
