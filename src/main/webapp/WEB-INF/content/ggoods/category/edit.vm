<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
	<head>
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
		<meta charset="utf-8" />
		<title>${baseDescribe}-修改分类</title>
		<meta name="keywords" content="修改分类" />
		<meta name="description" content="修改分类" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="${base}/mocentre/fileupload/css/uploader.css" />
		#parse("commons/commonCss.vm")
		#parse("commons/commonJs.vm")
	</head>

	<body class="no-skin">
		#parse("commons/header.vm")
		<div class="main-container" id="main-container">
			<script type="text/javascript">
				try{ace.settings.check('main-container' , 'fixed')}catch(e){}
			</script>

			<div class="main-container-inner">

				#parse("commons/sidebar.vm")
				<div class="main-content">
					
					#parse("commons/breadcrumbs.vm")
					<div class="page-content">
						
						#parse("commons/setting.vm")
						<div class="page-header">
							<h1>
                                修改分类
								#if ($!{GiftCategory.pid})
                                    <button type="submit" class="btn btn-purple btn-sm pull-right inline" onclick="javascript:window.location.href='${base}/ggoods/category/view.htm?id=${GiftCategory.pid}&cType=${GiftCategory.cType}'">
                                        <i class="ace-icon fa fa-reply icon-only"></i>
                                        返回
                                    </button>
								#else
									#parse("commons/backurl.vm")
								#end
							</h1>
						</div><!-- /.page-header -->
						
						<div class="row">
							<div class="col-xs-12">
								<!-- PAGE CONTENT BEGINS -->

								<form id="theForm" name="theForm" class="form-horizontal">

                                    <input type="hidden" id="id" value="$!{GiftCategory.id}">
									<input type="hidden" id="pid" value="$!{GiftCategory.pid}">

                                    <div class="form-group">
                                        <label class="col-sm-2 control-label no-padding-right" for="form-field-2"><span class="middle red">*</span>分类名称：</label>
                                        <div class="col-sm-3">
                                            <div class="clearfix">
                                                <input class="form-control" name="name" id="name" value="$!{GiftCategory.name}" type="text" placeholder="分类名称" />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-2 control-label no-padding-right" for="form-field-2"><span class="middle red">*</span>分类类型：</label>
                                        <div class="col-sm-3">
                                            <select name="cType" id="cType" disabled="disabled" class="form-control chosen-select" >
                                                <option value="">选择分类类型</option>
                                                <option value="virtual" #if($!{GiftCategory.cType}=="virtual") selected="selected" #end> 虚拟物品</option>
                                                <option value="material" #if($!{GiftCategory.cType}=="material") selected="selected" #end> 实体物品</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-2 control-label no-padding-right" for="form-field-1"> 是否展示 </label>
                                        <div class="col-sm-8 control-label align-left">
                                            <div class="clearfix">
                                                <input type="checkbox" name="isShow" id="isShow"   #if($!{GiftCategory.isShow}==1) checked #end class="ace ace-switch ace-switch-2" />
                                                <span class="lbl"></span>
                                                <span class="help-inline"><span class="middle">YES：展示；NO：不展示</span></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-2 control-label no-padding-right" for="form-field-2"> 排序 ：</label>

                                        <div class="col-sm-6">
                                            <div class="clearfix">
                                                <input type="text" id="sorting" name="sorting" placeholder="排序"  value="$!{GiftCategory.sorting}" class="col-xs-10 col-sm-5" />
                                                <span class="help-inline"><span class="middle">越小越靠前</span></span>
                                            </div>
                                        </div>
                                    </div>

									<div class="clearfix form-actions">
										<div class="col-md-offset-3 col-md-9">
											<a class="btn btn-info" id="btn-submit">
												<i class="icon-ok bigger-110"></i>
												提交
											</a>
	
											&nbsp; &nbsp; &nbsp;
											<button class="btn" type="reset">
												<i class="icon-undo bigger-110"></i>
												重置
											</button>
										</div>
									</div>
								</form>
								<!-- PAGE CONTENT ENDS -->
							</div><!-- /.col -->
						</div><!-- /.row -->
					</div><!-- /.page-content -->
				</div><!-- /.main-content -->

			</div><!-- /.main-container-inner -->

			#parse("commons/scroll.vm")
		</div><!-- /.main-container -->

		#parse("commons/footerJs.vm")
		<script src="${base}/mocentre/js/fuelux/fuelux.spinner.js"></script>
		<script src="${base}/mocentre/fileupload/js/dmuploader.js"></script>
		<script src="${base}/mocentre/fileupload/js/dmup-preview.js"></script>
		<script src="${base}/mocentre/js/common.js"></script>
		<script type="text/javascript">

            /* 排序控件  */
            $('#sorting').ace_spinner({min:1,max:200,step:1, btn_up_class:'btn-info',btn_down_class:'btn-info'});

            /* 表单提交*/
			$(document).on("click","#btn-submit",function() {

                var giftCategoryParam = {};

                if ($("#name").val() == ""){
                    layer.msg('分类名称不能为空');
                    return;
                }
                if ($("#cType").val() == ""){
                    layer.msg('分类类型不能为空');
                    return;
                }
                giftCategoryParam.id = $("#id").val();
                giftCategoryParam.name = $("#name").val();
                giftCategoryParam.ctype = $("#cType").val();
                giftCategoryParam.pid = $("#pid").val();
                giftCategoryParam.sorting = $("#sorting").val();

				if($("#isShow").is(':checked')){
                    giftCategoryParam.isShow = 1;
				}else{
                    giftCategoryParam.isShow = 0;
				}

                $.ajax({
                    "type": "POST",
                    "data": giftCategoryParam,
                    "url": '${base}/ggoods/category/editGiftCategory.htm',
                    "success": function (data) {
                        if ($("#pid").val() != null && $("#pid").val()  != ""){
                            window.location.href = "${base}/ggoods/category/view.htm?id=$!{GiftCategory.pid}";
						}else {
                            window.location.href = "${base}/ggoods/category/index.htm";
						}
                    }
                })
            })
		</script>
</body>
</html>
